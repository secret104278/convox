generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./db.sqlite"
}

model ConversationSession {
  id        String   @id @default(cuid())
  prompt    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  conversations Json

  @@index([createdAt])
} 

